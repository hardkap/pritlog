{loc_top}
<div class="content-item"> 
	<div class="content-dets"> 
		<h3>Posted by {author} <br/>on {date}<br/></h3> 
		
		<ul class="dets"> 
			<li>{comments}</li> 
			<li>{edit}{delete}</li>
			<li>{categoryLabel}: {category}</li>
		</ul> 
	</div> 
	<div class="content-body"> 
		<h2><a class="postTitle" href="{postLink}">{title}</a></h2>
		{loc_title_after}
		<div class="entry"> 
			{content}
			{loc_content_after}
			{loc_bottom}
			<br/><br/><br/>
		</div> 
	</div> 
	
		
</div> <!-- content-item --> 	
